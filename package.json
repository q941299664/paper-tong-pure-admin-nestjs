{
  "name": "pure-admin-nestjs",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "NODE_ENV=dev nest start --watch",
    "build": "nest build",
    "postbuild": "pnpm run copy-files",
    "prisma:generate": "prisma generate",
    "prisma:db-push:dev": "dotenv -e .env.dev -- prisma db push",
    "prisma:db-push:prod": "dotenv -e .env.prod -- prisma db push",
    "prisma:db-pull:dev": "dotenv -e .env.dev -- prisma db pull",
    "prisma:db-pull:prod": "dotenv -e .env.prod -- prisma db pull",
    "prisma:migrate-reset:dev": "dotenv -e .env.dev -- prisma migrate reset",
    "prisma:migrate-reset:prod": "dotenv -e .env.prod -- prisma migrate reset",
    "prisma:migrate-dev:dev": "dotenv -e .env.dev -- prisma migrate dev",
    "prisma:migrate-dev:prod": "dotenv -e .env.prod -- prisma migrate dev",
    "prisma:db-seed:dev": "dotenv -e .env.dev -- prisma db seed",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy-files": "copyfiles -u 1 prisma/schema/**/* dist/prisma/ && copyfiles package.json pnpm-lock.yaml .env.prod .env.dev dist/"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.6",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.0.6",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.3.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "csv-parser": "^3.2.0",
    "dayjs": "^1.11.13",
    "exceljs": "^4.4.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "nest-winston": "^1.10.2",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "split2": "^4.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.0",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/split2": "^4.2.3",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-perfectionist": "^4.7.0",
    "fastify": "^5.2.1",
    "jest": "^29.7.0",
    "prisma": "^6.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
